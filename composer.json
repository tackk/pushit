{
    "name": "tackk/shover",
    "description": "A lightweight PHP interface for the Pusher API",
    "license": "MIT",
    "authors": [
        {
            "name": "Dan Horrigan",
            "email": "dh@tackk.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "require": {
        "php": ">=5.4.0",
        "ext-curl": "*"
    },
    "suggest": {
        "guzzle/guzzle": "If you are making a lot of requests, use Guzzle."
    },
    "autoload": {
        "psr-4": {
            "Tackk\\Shover\\": "src/"
        },
        "classmap": ["src/"]
    },
    "config": {
        "bin-dir": "bin"
    }
}
